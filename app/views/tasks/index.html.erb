<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <p><% task.title %></p>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete", task_destroy_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
<br>
<br>
<%= link_to "Add a new task", task_new_path %>
